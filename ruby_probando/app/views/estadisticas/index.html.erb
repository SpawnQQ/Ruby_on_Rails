<p id="notice"><%= notice %></p>

<h1>Listing Estadisticas</h1>

<table>
  <thead>
    <tr>
      <th>Clasificacion</th>
      <th>Victorias</th>
      <th>Derrotas</th>
      <th>Empates</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estadisticas.each do |estadistica| %>
      <tr>
        <td><%= estadistica.clasificacion %></td>
        <td><%= estadistica.victorias %></td>
        <td><%= estadistica.derrotas %></td>
        <td><%= estadistica.empates %></td>
        <td><%= link_to 'Show', estadistica %></td>
        <td><%= link_to 'Edit', edit_estadistica_path(estadistica) %></td>
        <td><%= link_to 'Destroy', estadistica, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

