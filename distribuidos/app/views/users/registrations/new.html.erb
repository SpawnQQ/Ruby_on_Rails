<div style="height:400px;width:30%;margin:0 auto;">
  <h2>Registrate</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <br />
      <%= f.text_field :user_name, placeholder:"Nombre de usuario",autofocus: true,class:"form-control" %>
    </div>

    <div class="field">
      <br />
      <%= f.email_field :email, placeholder:"Email",autofocus: true,class:"form-control" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres minimo)</em>
      <% end %><br />
      <%=f.password_field :password, placeholder:"ContraseÃ±a" ,autocomplete: "off" ,class:"form-control"%>
    </div>

    <div class="field">
      <br />
      <%= f.password_field :pass, placeholder:"ContraseÃ±a",autocomplete: "off",class:"form-control" %>
    </div>
    
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>

